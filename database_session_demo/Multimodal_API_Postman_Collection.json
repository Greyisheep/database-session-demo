  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-generate session_id if not set",
          "if (!pm.variables.get('session_id')) {",
          "    pm.variables.set('session_id', pm.globals.replaceIn('{{$randomUUID}}'));",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-capture session_id from chat responses",
          "if (pm.response.json() && pm.response.json().data && pm.response.json().data.session_id) {",
          "    pm.variables.set('session_id', pm.response.json().data.session_id);",
          "    console.log('Session ID captured:', pm.response.json().data.session_id);",
          "}",
          "",
          "// Log response for debugging",
          "console.log('Response:', pm.response.json());"
        ]
      }
    }
